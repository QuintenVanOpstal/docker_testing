<?xml version="1.0" encoding="UTF-8"?>
<Server version="1.0">

    <!-- Required: Bind ports -->
    <Bind>
        <Service>
            <Interface>0.0.0.0</Interface>
            <Port>3333</Port>
            <Protocol>http</Protocol>
        </Service>
    </Bind>

    <!-- Required module section -->
    <Modules>
        <Module>
            <Name>OriginModule</Name>
        </Module>
    </Modules>

    <VirtualHosts>
        <VirtualHost>
            <Name>default</Name>

            <Applications>
                <Application>
                    <Name>live</Name>

                    <!-- Ingest RTMP -->
                    <Providers>
                        <Provider>
                            <Name>rtmp_provider</Name>
                            <Type>rtmp</Type>
                            <Port>1935</Port>
                        </Provider>
                    </Providers>

                    <!-- Publish WebRTC -->
                    <Publishers>
                        <Publisher>
                            <Name>webrtc_publisher</Name>
                            <Type>webrtc</Type>

                            <Signalling>
                                <Port>3333</Port>
                            </Signalling>

                        </Publisher>
                    </Publishers>

                </Application>
            </Applications>

        </VirtualHost>
    </VirtualHosts>

</Server>

